@model ICollection<STPC.DynamicForms.Web.RT.Services.Entities.Hierarchy>
@{

    <link href="@Url.Content("~/Content/style_treeview.css")" rel="stylesheet" type="text/css" />
    ViewBag.Title = "Jerarquias";
 
   
}


@using (Ajax.BeginForm("GetIndex", "Hierarchies", null,
                new AjaxOptions { 
                    UpdateTargetId = "CustomerForm" ,
                    OnSuccess = "hierarchiesupdateSuccess"
                },
                new { id = "EditCustomerProfileForm2" }))
{
    if (ViewBag.IsSingleTenant == 1)
    {
    @Html.Hidden("CategoryName", (string)@ViewBag.categoryname)
    <table>
        <tr>
            <td>
                <label for="parent">Empresa</label></td>
            <td>

                @Html.DropDownList("ddlAplicationName",
            new SelectList(ViewBag.listAplication, "Value", "Text"), "---Ver todas las opciones---",
            new { style = "width:200px" })

            </td>
        </tr>
    </table>
    
    }
    <div id="CustomerForm">
        @{Html.RenderPartial("_List");}
    </div>
}



@section BottomAssets 
  {

    <script src="@Url.Content("~/Scripts/Hierarchies/List.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Hierarchies/_List.js")" type="text/javascript"></script>

}